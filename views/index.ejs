<%- include('partials/header') %>

<%
  // Force the billboard to use your Porsche banner image at the top
  const heroBg = '/images/porsche-banner.jpeg';
%>

<!-- Full-bleed billboard with Porsche background -->
<section class="billboard" style="--billboard:url(<%= heroBg %>)">
  <div class="billboard-inner container">
    <div class="bb-copy">
      <span class="eyebrow">Welcome to</span>
      <h1>MED AUTO</h1>
      <p class="bb-sub">Curated pre-owned vehicles. Transparent pricing. Easy bookings.</p>
      <div class="row">
        <a class="btn btn-secondary" href="/inventory">View Inventory</a>
        <a class="btn btn-primary" href="/book">Book Appointment</a>
      </div>
    </div>
  </div>
</section>

<!-- Quick value props -->
<section class="container section">
  <h2 class="section-title">Why MED AUTO?</h2>
  <div class="features">
    <div class="feature">
      <div class="ic">üß∞</div>
      <h3>Inspected</h3>
      <p>Each car is checked for mechanical and cosmetic quality.</p>
    </div>
    <div class="feature">
      <div class="ic">üí¨</div>
      <h3>Transparent</h3>
      <p>No games. Clear pricing and straightforward deals.</p>
    </div>
    <div class="feature">
      <div class="ic">‚è±Ô∏è</div>
      <h3>Quick Booking</h3>
      <p>Pick a test-drive time in minutes.</p>
    </div>
  </div>
</section>

<!-- Latest Arrival (Spotlight) -->
<section class="container section">
  <h2 class="section-title">Latest Arrival</h2>

  <% if (typeof featuredCar !== 'undefined' && featuredCar) { %>
    <a href="/inventory/<%= featuredCar._id %>" class="spotlight">
      <div class="spotlight-media">
        <% if (featuredCar.images && featuredCar.images.length) { %>
          <img src="<%= featuredCar.images[0] %>" alt="<%= featuredCar.make %> <%= featuredCar.model %>" />
        <% } %>

        <span class="spotlight-badge">MED AUTO</span>
        <span class="spotlight-chip"><%= featuredCar.year %></span>

        <% if (typeof featuredCar.price === 'number') { %>
          <span class="spotlight-price">$<%= featuredCar.price.toLocaleString() %></span>
        <% } %>
      </div>

      <div class="spotlight-caption">
        <h3><%= featuredCar.make %> <%= featuredCar.model %></h3>
        <% if (typeof featuredCar.mileage === 'number') { %>
          <span class="meta"><%= featuredCar.mileage.toLocaleString() %> km</span>
        <% } %>
      </div>
    </a>
  <% } else { %>
    <p style="text-align:center;color:var(--muted)">Add a car in Admin to showcase it here.</p>
  <% } %>
</section>

<section class="cta-strip">
  <div class="container">
    <h2>Ready to see a car?</h2>
    <a href="/book" class="btn btn-on-dark">Book Now</a>
  </div>
</section>

<%- include('partials/footer') %>
